<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Patient_Consent_Date_Required</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
  Consent_Accepted__c = TRUE,
  ISBLANK( Consent_Date__c )
)</errorConditionFormula>
    <errorMessage>Consent Date is required when Consent Accepted = True.</errorMessage>
</ValidationRule>
